#projects-carrusel.carousel-projects.slide
  %ol.carousel-indicators
    - @project.screenshots.each_with_index do |screenshot, index|
      - if index == 0
        %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => index.to_s, :class => 'active'}
          = index.to_s
      - else
        %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => index.to_s}
          = index.to_s

  <!-- Carousel items -->
  .carousel-inner
    - @project.screenshots.each_with_index do |screenshot, index|
      - if index == 0
        .item.active
          = image_tag screenshot.screenshot_url(:regular)
      - else
        .item
          = image_tag screenshot.screenshot_url(:regular)



  <!-- Carousel nav -->
  -#
    = link_to raw('&lsaquo;'), '#la-bodega-carrusel', :"data-slide" => 'prev', :class => 'carousel-control left'
    = link_to raw('&rsaquo;'), '#la-bodega-carrusel', :"data-slide" => 'next', :class => 'carousel-control right'



