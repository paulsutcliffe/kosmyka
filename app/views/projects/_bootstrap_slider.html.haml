#projects-carrusel.carousel-projects.slide
  %ol.carousel-indicators
    %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => "0", :class => "active"}
      0
    %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => "1"}
      1
    %li{:"data-target" => "#projects-carrusel", :"data-slide-to" => "2"}
      2

  <!-- Carousel items -->
  .carousel-inner
    .item.active
      = image_tag 'img-port.jpg'
    .item
      = image_tag 'img-port.jpg'



  <!-- Carousel nav -->
  -#
    = link_to raw('&lsaquo;'), '#la-bodega-carrusel', :"data-slide" => 'prev', :class => 'carousel-control left'
    = link_to raw('&rsaquo;'), '#la-bodega-carrusel', :"data-slide" => 'next', :class => 'carousel-control right'



