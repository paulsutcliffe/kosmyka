
- model_class = Project

// encabezado(img root, page main title, page secondary title, bootstrap class)
= encabezado(@project.image_url(:parallax), @project.name, 'false', 'span10 offset1')


.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @project.name
%p
  %strong= model_class.human_attribute_name(:client) + ':'
  %br
  = @project.client
%p
  %strong= model_class.human_attribute_name(:launched) + ':'
  %br
  = @project.launched
%p
  %strong= model_class.human_attribute_name(:areas) + ':'
  %br
  = @project.areas
%p
  %strong= model_class.human_attribute_name(:tecnologies) + ':'
  %br
  = @project.tecnologies
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @project.description
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @project.url
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @project.kind

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), projects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_path(@project), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), project_path(@project), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
