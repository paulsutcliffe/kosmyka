= nested_form_for @project, :html => { :multipart => true, :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :client, :class => 'control-label'
    .controls
      = f.text_field :client, :class => 'text_field'
  .control-group
    = f.label :launched, :class => 'control-label'
    .controls
      = f.date_select :launched, :class => 'date_select'
  .control-group
    = f.label :areas, :class => 'control-label'
    .controls
      = f.text_field :areas, :class => 'text_field'
  .control-group
    = f.label :tecnologies, :class => 'control-label'
    .controls
      = f.text_field :tecnologies, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field'
  .control-group
    = f.label :kind, :class => 'control-label'
    .controls
      = f.select(:kind, options_for_select( ['web', 'imp'], 'web' ) )
  .control-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.file_field :image, :class => 'file_field'
  = f.fields_for :screenshots do |screenshot_form|
    .control-group
      = screenshot_form.label :screenshot, :class => 'control-label'
      .controls
        = screenshot_form.file_field :screenshot, :class => 'file_field'
    .form-actions
      = screenshot_form.link_to_remove "Removes this screenshot", :class => 'btn'
  .form-actions
    = f.link_to_add "Add Screenshot", :screenshots, :class => 'btn'

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn'
