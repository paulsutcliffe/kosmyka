- content_for :scripts do
  = render 'scripts/isotope'
  = # render 'scripts/isotope_init'


#projectafolio

  %nav#portafolio-botones
    %ul{:"data-option-key" => 'filter'}
      %li
        = link_to 'Web', '#filter', :"data-filter" => '.web', :class => 'iso-web'
      %li
        = link_to 'Impresi칩n', '#filter', :"data-filter" => '.impresi칩n', :class => 'iso-imp'
      %li
        = link_to 'Todos', '#filter', :class => 'active', :"data-filter" => '*', :class => 'iso-tod'

  %ul#portafolio-listado
    - @projects.each do |project|
      %li{:class => 'web'}
        = link_to (image_tag project.image_url(:thumb)), project
        %h3.title
          = link_to project.name, project
        %p= project.areas

    -# @projects.each do |project|
      %li{:class => agregar_clase_segun_tipo(project) + ' ' + agregar_tipo_como_clase(project) }
        = image_tag project.foto(:thumb)
        .content
          %h3.title= project.titulo
          %p
            = paragraph(project, 80)
          - if project.tipo == 'Dise침o y Web'
            .website
              = link_to project.url_web, project.url_web, :target => '_blank'
            = link_to '', project.foto(:full), :class => 'lightbox fotaso',
              :"data-target" => 'flare',
              :"data-flare-gallery" => project.id,
              :"data-flare-thumb" => project.foto(:thumb)
          - else
            = link_to '', '', :class => 'lightbox videaso',
              :"data-target" => 'flare',
              :"data-flare-video" => project.video

          -if current_admin
            .crud
              = link_to 'Ver', project
              = link_to 'Editar', edit_project_path(project)
              = link_to 'Eliminar', project, :confirm => 'Are you sure?', :method => :delete

        - if project.tipo == 'Dise침o y Web'
          - project.imagenes.each do |imagen|
            = link_to '', imagen.fotografia(:full), :class => 'lightbox',
              :"data-target" => 'flare',
              :"data-flare-gallery" => project.id,
              :"data-flare-thumb" => imagen.fotografia(:thumb)
