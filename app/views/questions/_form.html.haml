= form_for(@question) do |f|
  - if @question.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@question.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @question.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :question
    %br
    = f.text_field :question
  .field
    = f.label :answer
    %br
    = f.text_area :answer

  .actions
    = f.submit
